<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Task</title>
</head>
<body>
    <h1>Create Task</h1>
    <%- nav %>
    <form action="/create-task/<%= task.id %>" method="POST">
        <label for="title">Title of Task:</label>
        <input type="text" id="title" name="title" value="<%= task.title %>">
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= task.description %></textarea>
        <br>
        <label for="userId">Assigned To:</label>
        <select id="userId" name="userId">
            <% users.forEach(user => { %>
                <option value="<%= user.id %>" <%= task.user_id === user.id ? 'selected' : '' %>>
                    <%= user.fname %> <%= user.lname %>
                </option>
            <% }); %>
        </select>
        <br>
        <label for="due_date">Due Date:</label>
        <input type="text" id="due_date" name="due_date" value="<%= task.due_date %>">
        <br>
        <label for="notes">Notes:</label>
        <textarea id="notes" name="notes"><%= task.notes %></textarea>
        <br>
        <button type="submit">Create Task</button>
    </form>

    <a href="/tasks">Back to Task List</a>
</body>
</html>
