<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Task</title>
</head>
<body>
    <h1>Edit Task</h1>
    <%- nav %>
    <form action="/update-task/<%= task.id %>" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= task.title %>">
        <br>
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= task.description %></textarea>
        <br>
        <label for="userId">Assigned To:</label>
        <select id="userId" name="userId">
            <% users.forEach(user => { %>
                <option value="<%= user.id %>" <%= task.user_id === user.id ? 'selected' : '' %>>
                    <%= user.fname %> <%= user.lname %>
                </option>
            <% }); %>
        </select>
        <br>
        <label for="notes">Notes:</label>
        <textarea id="notes" name="notes"><%= task.notes %></textarea>
        <br>
        <label for="status">Status:</label>
        <select id="status" name="status">
            <option value="Incomplete" <%= task.status === 'Incomplete' ? 'selected' : '' %>>Incomplete</option>
            <option value="Completed" <%= task.status === 'Completed' ? 'selected' : '' %>>Completed</option>
            <option value="Started" <%= task.status === 'Started' ? 'selected' : '' %>>Started</option>
        </select>
        <br>
        <button type="submit">Update Task</button>
    </form>

    <a href="/tasks">Back to Task List</a>
</body>
</html>
